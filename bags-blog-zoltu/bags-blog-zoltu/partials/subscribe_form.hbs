<div class="blog-heading small">Subscribe to our latest update</div>
<form method="post" action="{{action}}" class="{{form_class}}">
    {{! This is required for the form to work correctly }}
    {{hidden}}
	
    <div class="{{#if error}} error{{/if}}">
        {{input_email class=input_class placeholder="Email Id" value=email autofocus=autofocus}}
    </div>
    <button class="submit-btn" type="submit">Subscribe</button>
    {{! This is used to get extra info about where this subscriber came from }}
    {{script}}
</form>

{{#if error}}
    <p class="main-error">{{{error.message}}}</p>
{{/if}}